################################################################################

mt:tonal_type
    a owl:Class ;
    a crm:E55_Type ;
    .

mt:system
    a owl:ObjectProperty ;
    rdfs:domain <291802e1-af98-40d5-8611-8c34b10e87a6> ;
    rdfs:range xsd:string ;
    .

mt:clef
    a owl:ObjectProperty ;
    rdfs:domain <291802e1-af98-40d5-8611-8c34b10e87a6> ;
    rdfs:range xsd:string ;
    .

mt:final
    a owl:ObjectProperty ;
    rdfs:domain <291802e1-af98-40d5-8611-8c34b10e87a6> ;
    rdfs:range xsd:string ;
    .

<8d39fbcf-d4ef-420e-bc14-d6786721a536>
    a mt:tonal_type ;
    a crm:E55_Type ;
    mt:system "♮" ;
    mt:clef "g2" ;
    mt:final "A2" ;
    .

mt:tonus
    a owl:Class ;
    .

mt:tonus_peregrinus
    rdfs:subClassOf mt:tonus ;
    .

<398de1eb-7f0b-465a-91ad-2f73a4e9712e>
    a mt:tonus_peregrinus ;
    .

mt:has_tonus
    a owl:ObjectProperty ;
    rdfs:domain mt:Work ;
    rdfs:range mt:tonus ;
    .

